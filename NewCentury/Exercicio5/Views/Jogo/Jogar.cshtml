@{
    ViewData["Title"] = "Jogar";
}

<h2>Jogo em andamento</h2>
<p>@ViewBag.Mensagem</p>
<p>Tentativas restantes: @ViewBag.Restantes</p>
<p>Rank atual: @ViewBag.Rank</p>

<form method="post">
    <label>Digite seu palpite:</label>
    <input type="number" name="tentativa" min="1" max="100" required />
    <button type="submit">Enviar</button>
</form>

<a asp-action="Historico">Ver histórico</a>
